@model IEnumerable<hotelreservation.Models.tbl_room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.no_of_room)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_roomtype.room_type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.no_of_room)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_roomtype.room_type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.room_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.room_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.room_id })
        </td>
    </tr>
}

</table>

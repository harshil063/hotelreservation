@model hotelreservation.Models.tbl_roomtype

@{
    ViewBag.Title = "editroomtype";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="container-sm mt-lg-5">
                <!-- general form elements -->
                <div class="card card-gray-dark">
                    <div class="card-header">
                        <h3 class="card-title">Update Room Category</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                <form>
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        @if (ViewBag.saveresult != null)
                        {
                            <p class="alert alert-success">@ViewBag.saveresult</p>
                        }

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.roomtype_id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.room_type, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.room_type, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.room_type, "", new { @class = "text-danger" })

                        </div>

                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" name="room_photo" class="custom-file-input" id="">
                                @Html.TextBoxFor(model => model.room_photo)
                                
                                
                                @Html.ValidationMessageFor(model => model.room_photo, "", new { @class = "text-danger" })
                                <label class="custom-file-label" for="">Choose file</label>

                            </div>
                            <div class="input-group-append">
                                @*<span class="input-group-text">upload</span>*@
                                <img src="~/Content/img/@Model.room_photo" style="width:50px; height:50px;" />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.room_price, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.room_price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.room_price, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.room_description, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.room_description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.room_description, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-dark">Update</button>
                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("Back to List", "viewroomtype")
                    </div>
                    
                </form>
                    }
                </div>
                <!-- /.card -->



            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
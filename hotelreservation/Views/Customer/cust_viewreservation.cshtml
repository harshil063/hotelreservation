@model IEnumerable<hotelreservation.Models.tbl_reservation>

@{
    ViewBag.Title = "cust_viewreserveroom";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var price = ViewBag.price;
}

<html>
<head>

    @section scripts{
        <script>
            $(function () {
                $('button.details').on('click', function () {
                    $('.modal-body').load(`/cust_detailsres/id=${$(this).data('id')}`);
                });
            })
        </script>
    }
</head>
<body>




<section class="content">
    <div class="container-fluid align-content-center" style="margin:auto; padding:10px; width:50%;">
        <div class="row">

            <div class="card ">
                <div class="card-header">
                    <h3 class="card-title">Your All reservations</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>

                            <tr>

                                <th>Room</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.tbl_room.tbl_roomtype.room_type) </td>
                                @*<td><button class="btn btn-sm btn-dark details" data-toggle="modal" data-target="#details-modal" data-id="@item.res_id">Details</button></td>
                                <td><a href="/cust_detailsres" data-toggle="modal" data-target="#viewresdetails">View</a></td>*@

                                <td>@*@Html.ActionLink("cust_detailsres", "customer", new { id = item.res_id }, new { @class = "btn btn-success " })*@</td>
                                <td><a href="@Url.Action("cust_detailsres", "customer", new { id = item.res_id })" class="btn btn-outline-primary btn-block">Check <i class="fas fa-eye"></i></a></td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-right">

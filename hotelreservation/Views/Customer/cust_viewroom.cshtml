@model IEnumerable<hotelreservation.Models.tbl_room>

@{
    ViewBag.Title = "cust_viewroom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @*<form asp-controller="Customer" asp-action="cust_viewroom">
            <p>
                Title: <input type="text" name="SearchString" />
                <input type="submit" value="Filter" />
            </p>
        </form>*@
    
    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <h3 class="text-center ">Search</h3>
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <form asp-controller="Customer" asp-action="cust_viewroom">
                            <div class="input-group">
                                <input type="search" name="SearchString" class="form-control form-control-lg" placeholder="Search your room Here">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-lg btn-default">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                        @if (Model.Count() == 0)
                        {
                            <p class="blockquote" style="color:red; text-align:center">@ViewBag.emptyerr</p>
                        }
                    </div>
                </div>
                
            </div>
        </section>
        
    </div>
        @*@if (ViewBag.emptyerr != null)
        {
            <p class="alert alert-danger" style="width:280px;">@ViewBag.emptyerr</p>
        }*@
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 product-card">
                    <div class="badge">POPULAR</div>
                    <div class="product-tumb">
                        <img src="/Content/img/@item.tbl_roomtype.room_photo" ) alt="">
                    </div>
                    <div class="product-details">
                        <div>
                            <div class="product-catagory">
                                <h4><a href="">@Html.DisplayFor(modelItem => item.tbl_roomtype.room_type) </a></h4>
                            </div>
                        </div>
                        <div class="product-bottom-details">
                            <a href="@Url.Action("cust_detailsroom", "Customer", new { id = item.room_id })" class="btn btn-outline-primary btn-block">Check <i class="fas fa-eye"></i></a>
                            @*<a href="/admin/details_roomtype/" class="btn btn-outline-primary btn-block">Check <i class="fa fa-eye"></i></a>*@
                        </div>
                    </div>
                </div>
            }
        </div>
            
    </div>
